###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto

*.html    text diff=html
*.css     text
*.js      text
*.xml     text
*.txt     text
*.sql     text
*.md      text
*.py      text
*.yaml    text
*.yml     text
*.sh      eol=lf
*.conf    eol=lf

*.sqlite filter=lfs diff=lfs merge=lfs -text
*.db filter=lfs diff=lfs merge=lfs -text
